<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="eingv.uabc.com.myso.Activity3Detalles"

    android:id="@+id/sjn"
    android:background="@drawable/fondo2">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:id="@+id/ub"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imagenID"
            android:layout_gravity="center_horizontal|top" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Fecha Creacion:"
                android:id="@+id/Fech"
                android:layout_column="3"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/fechaInicioID"
                android:layout_column="4"
                android:hint="FechaInicio"
                android:textSize="12dp" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Fecha Terminacion:"
                android:id="@+id/textView"
                android:layout_column="3"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/fechaTerminoID"
                android:layout_column="4"
                android:hint="FechaTerminacion"
                android:textSize="12dp" />
        </TableRow>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_gravity="center">

        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView2"
            android:layout_column="4"
            android:background="#2a59475e"
            android:fillViewport="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="start">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/descId"

                    android:autoText="true"
                    android:gravity="center|bottom|top"
                    android:textAlignment="inherit"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
                    android:editable="true"
                    android:clickable="true"
                    android:layout_column="4"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_below="@+id/ub"
                    android:layout_alignLeft="@+id/ub"
                    android:layout_alignStart="@+id/ub"
                    android:layout_marginTop="57dp" />
            </LinearLayout>
        </ScrollView>

    </TableLayout>

</RelativeLayout>
